<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	
  <!-- 将配置移到配置文件中 -->
  <properties resource="c3p0.properties"></properties>
  <typeAliases>
  	<!-- 在user.xml或者usermapper.xml中就不需要写一长串的类路径了,不限大小写UsEr -->
  	<!-- <typeAlias type="com.jit.model.User" alias="User"/> -->
  	
  	<package name="com.jit.model"/> <!-- 整个包都进行别名设置 -->
  	
  </typeAliases>
	<!-- 配置数据库连接池 -->
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
      	<property name="driver" value="${jdbc.driver}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
      </dataSource>
    </environment>
  </environments>
  
  <!-- 配置映射关系 -->
  <mappers>
   <!--  <mapper resource="sqlmap/user.xml"/> -->
 <!--    <mapper class="com.jit.mapper.UserMapper"/> -->
	<!-- 批量映射 -->
	<package name="com.jit.mapper"/>
  </mappers>
</configuration>